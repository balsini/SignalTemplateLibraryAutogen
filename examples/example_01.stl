/*********************************
 * Definition of constant values *
 *********************************/

T0 = 0;
SimulationEnd = 4;
StepTime = 1;
MaxOvershoot = 2.5;
SettlingTime = 1.7;
T_rise = 0.25;

%%

/******************************
 * Definition of STL Formulas *
 ******************************/

// Rise Time
<>_[StepTime, StepTime + SettlingTime] { SIGA < 0.9 * REFA };

// Overshoot
[]_[StepTime, SimulationEnd] { SIGA < REFA + MaxOvershoot };

// SettlingTime
[]_[StepTime + SettlingTime, SimulationEnd] { abs(SIGA - REFA) < 0.3 };

// Steady state error
[]_[SimulationEnd, SimulationEnd] { abs(SIGA - REFA) < 0.1 };